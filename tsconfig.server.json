{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "api",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "express"]
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "dist"]
}